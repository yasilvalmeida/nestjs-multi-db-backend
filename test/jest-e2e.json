{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage-e2e",
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setup.ts"
  ],
  "testTimeout": 30000
}